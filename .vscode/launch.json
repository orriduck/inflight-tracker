{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Next.js: dev",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "bash",
            "runtimeArgs": [
                "-c",
                "source ~/.nvm/nvm.sh && nvm use && npm run dev"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        }
    ]
} 